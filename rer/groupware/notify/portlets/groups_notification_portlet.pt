<dl class="portlet portletGroupwareNotification"
    i18n:domain="rer.groupware.notify">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span i18n:translate="portlet_room_title">
            <span class="roomName" i18n:name="room_name" tal:content="view/room_title" /> notifications
        </span>
        <span class="portletTopRight"></span>
    </dt>
    
    <dd class="portletItem">
        <div>
            <dl class="groupNotificationList">
                <tal:areas repeat="area view/listNotificationGroups">
                    <dd tal:define="group area/group_data">
                        <a href=""
                           title="Enable notifications"
                           tal:condition="python:not view.inNotificationGroup(group)"
                           i18n:attributes="title"
                           tal:attributes="href string:${here/absolute_url}/@@notification-subscription?room_id=${view/room_id}&area_id=${area/id}">
                            <img tal:attributes="src string:${here/portal_url}/++resource++rer.groupware.room.images/group_false.png"
                                 alt="Disabled"
                                 role="checkbox"
                                 aria-checked="false"
                                 i18n:attributes="alt" />
                            <span tal:replace="area/title" />
                        </a>
                        <a href=""
                           title="Disable notifications"
                           tal:condition="python:view.inNotificationGroup(group)"
                           i18n:attributes="title"
                           tal:attributes="href string:${here/absolute_url}/@@notification-subscription?room_id=${view/room_id}&area_id=${area/id}">
                            <img tal:attributes="src string:${here/portal_url}/++resource++rer.groupware.room.images/group_true.png"
                                 role="checkbox"
                                 alt="Enabled"
                                 aria-checked="true"
                                 i18n:attributes="alt" />
                            <span tal:replace="area/title" />
                        </a>
                    </dd>
                </tal:areas>
            </dl>
        </div>
    </dd>
    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
    
</dl>
